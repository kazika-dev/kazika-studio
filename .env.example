
# Google Gemini API Key
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# Supabase Configuration
# Get these from your Supabase project settings (Project Settings > API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Supabase Database (Direct Connection - Optional)
SUPABASE_DB_HOST=aws-0-ap-northeast-1.pooler.supabase.com
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres.xxxxx
SUPABASE_DB_PASSWORD=your_password
SUPABASE_DB_PORT=5432

# GCP Storage Configuration
# Get your service account key from GCP Console (IAM & Admin > Service Accounts)
# The key should be a JSON string (minified, without line breaks)
GCP_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# GCP Storage Bucket Name
GCP_STORAGE_BUCKET=your-bucket-name
