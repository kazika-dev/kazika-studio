{
  "name": "kazika-studio",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
 
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "nodeGypDependencies": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },


"postCreateCommand": "sudo mkdir -p /home/node/.ssh && sudo chown -R node:node /home/node/.ssh && chmod 700 /home/node/.ssh && npm install && npm install -g @anthropic-ai/claude-code"
,
  "remoteUser": "node",

  "mounts": [
    "source=kazika-studio-ssh,target=/home/node/.ssh,type=volume",
    "source=kazika-studio-vscode,target=/home/node/.vscode-server,type=volume"
  ],

  "forwardPorts": [3000]
}
